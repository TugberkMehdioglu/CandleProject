<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">

    <title>CandleProject</title>

    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&family=Open+Sans&display=swap" rel="stylesheet">

    <link href="~/outerTools/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/outerTools/css/bootstrap-icons.css" rel="stylesheet">

    <link href="~/outerTools/css/templatemo-topic-listing.css" rel="stylesheet">
    <!--

    TemplateMo 590 topic listing

    https://templatemo.com/tm-590-topic-listing

    -->

    @await RenderSectionAsync("Css", required: false)
</head>

<body id="top">

    @{
        bool isAuthenticated = User.Identity!.IsAuthenticated;
        bool isAdmin = User.IsInRole("Admin");
    }

    <main>

        <nav class="navbar navbar-expand-lg" style="background-color:#80d0c7 !important;">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi-balloon"></i>
                    <span>CandleProject</span>
                </a>

                <div class="d-lg-none ms-auto me-4">
                    @if(!isAuthenticated)
                    {
                        <a class="btn custom-btn" asp-controller="Home" asp-action="Login">Giriş Yap</a>
                        <a class="btn custom-btn" asp-controller="Register" asp-action="Signup">Üye Ol</a>
                    }
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav m-lg-auto">
                        <li class="nav-item d-none">
                            <a class="nav-link"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"] != null && ViewData["Title"]!.ToString() == "Home Page" ? "active" : "inactive")" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"] != null && ViewData["Title"]!.ToString() == "Shopping" ? "active" : "inactive")" asp-area="" asp-route-categoryId="" asp-route-search="" asp-route-selectSort="" asp-route-pageNumber="" asp-controller="Shopping" asp-action="ShoppingList">Mağaza</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"] != null && ViewData["Title"]!.ToString() == "CartPage" ? "active" : "inactive")" asp-controller="Shopping" asp-action="CartPage">Sepetim</a>
                        </li>

                        @if (isAdmin)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarLightDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">Admin</a>

                                <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarLightDropdownMenuLink">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="UserList">Admin Panel</a></li>
                                    <li><a class="dropdown-item" href="/Home">Ana Sayfa</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="OrderList">Siparişler</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="UserList">Kullanıcılar</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="CategoryList">Kategoriler</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="ProductList">Ürünler</a></li>
                                </ul>
                            </li>
                        }
                        
                        @if (isAuthenticated)
                        {
                            <li class="nav-item dropdown d-lg-none">
                                <a href="#top" class="navbar-icon bi-person smoothscroll" role="button" id="dropdownUserMenu1" data-bs-toggle="dropdown" aria-expanded="false"></a>
                                <ul class="dropdown-menu dropdown-menu-light " id="userIconsUl" aria-labelledby="dropdownUserMenu1">
                                    @if (isAdmin)
                                    {
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="UserList">Admin Panel</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="OrderList">Siparişler</a></li>
                                    }
                                    <li><a class="dropdown-item" asp-area="Member" asp-controller="Profile" asp-action="Details">Profilim</a></li>
                                    <li><a class="dropdown-item" asp-area="Member" asp-controller="Address" asp-action="Addresses">Adreslerim</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout" asp-route-returnUrl="/Home">Çıkış Yap</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <div class="d-none d-lg-block">

                        @if (isAuthenticated)
                        {
                            <div class="dropdown me-5">
                                <a href="#top" class="navbar-icon bi-person smoothscroll" role="button" id="dropdownUserMenu" data-bs-toggle="dropdown" aria-expanded="false"></a>
                                <ul class="dropdown-menu dropdown-menu-light mt-2 me-3" aria-labelledby="dropdownUserMenu">
                                    @if (isAdmin)
                                    {
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="UserList">Admin Panel</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="OrderList">Siparişler</a></li>
                                    }
                                    <li><a class="dropdown-item" asp-area="Member" asp-controller="Profile" asp-action="Details">Profilim</a></li>
                                    <li><a class="dropdown-item" asp-area="Member" asp-controller="Address" asp-action="Addresses">Adreslerim</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout" asp-route-returnUrl="/Home">Çıkış Yap</a></li>
                                </ul>
                            </div>

                        }
                        else
                        {
                            <a class="btn custom-btn" asp-controller="Home" asp-action="Login">Giriş Yap</a>
                            <a class="btn custom-btn" asp-controller="Register" asp-action="Signup">Üye Ol</a>
                        }

                    </div>

                </div>
            </div>
        </nav>

        @await RenderSectionAsync("HomePage", required: false)

        <section class="section-padding">
            <div>

                @RenderBody()

            </div>
        </section>
    </main>

    <footer class="site-footer section-padding">
        <div class="container">
            <div class="row">

                <div class="col-lg-4 col-12 mb-4 pb-2">
                    <a class="navbar-brand mb-2" asp-controller="Home" asp-action="Index">
                        <i class="bi-balloon"></i>
                        <span>CandleProject</span>
                    </a>
                </div>

                <div class="col-lg-4 col-md-6 col-6">
                    <h6 class="site-footer-title mb-3">Hakkımızda</h6>

                    <ul class="site-footer-links">
                        <li class="site-footer-link-item">
                            <a href="/Home/#section_3" class="site-footer-link">Sipariş ve teslimat süreci</a>
                        </li>

                        <li class="site-footer-link-item">
                            <a href="/Home/#section_4" class="site-footer-link">Sıkça Sorulan Sorular</a>
                        </li>

                        <li class="site-footer-link-item">
                            <a href="/Home/#section_5" class="site-footer-link">İletişim</a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6 col-12 mt-4 mt-lg-0 ms-auto">

                    <p class="copyright-text">
                        Copyright © @DateTime.Now.Year <a href="https://github.com/TugberkMehdioglu">Creater</a>
                        <br><br>Design: <a href="https://github.com/TugberkMehdioglu">Creater</a>
                    </p>

                </div>
            </div>
        </div>
    </footer>


    <!-- JAVASCRIPT FILES -->
    <script src="~/outerTools/js/jquery.min.js"></script>
    <script src="~/outerTools/js/bootstrap.bundle.min.js"></script>
    <script src="~/outerTools/js/jquery.sticky.js"></script>
    <script src="~/outerTools/js/click-scroll.js"></script>
    <script src="~/outerTools/js/custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
